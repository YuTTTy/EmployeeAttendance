<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_activity_progress_all_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_activity_progress_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="@color/baseTextMain"
                android:textSize="@dimen/text_main_content" />

            <View
                android:id="@+id/tab_activity_progress_all_view"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:visibility="gone">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_activity_progress_effect_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_activity_progress_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/baseTextSub"
                android:textSize="@dimen/text_main_content" />

            <View
                android:id="@+id/tab_activity_progress_effect_view"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:visibility="gone">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_activity_progress_result_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_activity_progress_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日报"
                android:textColor="@color/baseTextSub"
                android:textSize="@dimen/text_main_content" />

            <View
                android:id="@+id/tab_activity_progress_result_view"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:visibility="gone">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_activity_progress_performance_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_activity_progress_performance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周报"
                android:textColor="@color/baseTextSub"
                android:textSize="@dimen/text_main_content" />

            <View
                android:id="@+id/tab_activity_progress_performance_view"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:visibility="gone">

            </View>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:background="@color/baseLine">

    </View>
</RelativeLayout>