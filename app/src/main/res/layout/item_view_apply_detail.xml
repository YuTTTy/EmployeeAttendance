<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_view_apply_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usually_spacing_middle"
            android:text="name"
            android:textColor="@color/baseTextMain"
            android:textSize="@dimen/text_main_content" />

        <TextView
            android:id="@+id/item_view_apply_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usually_spacing_middle"
            android:layout_toRightOf="@+id/item_view_apply_detail_name"
            android:text="value"
            android:textColor="@color/baseTextMain"
            android:textSize="@dimen/text_main_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/usually_line"
            android:layout_below="@+id/item_view_apply_detail_name"
            android:layout_marginLeft="@dimen/usually_spacing_middle"
            android:layout_marginRight="@dimen/usually_spacing_middle"
            android:layout_marginTop="@dimen/usually_spacing_middle"
            android:background="@color/baseLine"></View>
    </RelativeLayout>
</LinearLayout>