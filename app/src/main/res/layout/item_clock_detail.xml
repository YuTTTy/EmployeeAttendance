<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_clock_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到:"
        android:textColor="@color/baseTextMain"
        android:textSize="@dimen/text_main_content" />

    <ImageView
        android:id="@+id/item_clock_detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_clock_detail_text"
        android:layout_marginTop="@dimen/usually_spacing_small"
        android:src="@drawable/ic_launcher_round" />

    <TextView
        android:id="@+id/item_clock_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_clock_detail_text"
        android:layout_toRightOf="@+id/item_clock_detail_icon"
        android:text="address"
        android:layout_marginLeft="@dimen/usually_spacing_small"
        android:textColor="@color/baseTextMain"
        android:textSize="@dimen/text_assist_content" />
    <TextView
        android:id="@+id/item_clock_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_clock_detail_text"
        android:text="time"
        android:layout_alignParentRight="true"
        android:textColor="@color/baseTextMain"
        android:textSize="@dimen/text_assist_content" />
</RelativeLayout>