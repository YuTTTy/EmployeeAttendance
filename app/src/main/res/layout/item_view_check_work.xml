<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/usually_spacing_middle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_view_check_work_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apply_leave" />

        <TextView
            android:id="@+id/item_view_check_work_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/usually_spacing_middle"
            android:text="请假申请"
            android:textColor="@color/baseTextMain"
            android:textSize="@dimen/text_main_content" />
    </LinearLayout>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="@dimen/usually_line_middle"
        android:background="@color/baseLine"
        />
</LinearLayout>